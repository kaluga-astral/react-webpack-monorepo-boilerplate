{
  "name": "@astral/react-webpack-boilerplate",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "npm run lint --workspaces --if-present",
    "lint:types": "npm run lint:types --workspaces --if-present",
    "lint:styles": "npm run lint:styles --workspaces --if-present",
    "tests": "npm run tests --workspaces --if-present",
    "main:dev": "npm run dev --workspace=@example/main",
    "main:components-tests:dev": "npm run test:components:dev --workspace=@example/main",
    "admin:dev": "npm run dev --workspace=@example/admin",
    "admin:components-tests:dev": "npm run test:components:dev --workspace=@example/admin"
  },
  "dependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6"
  },
  "devDependencies": {
    "eslint": "^8.22.0",
    "prettier": "^2.7.1",
    "@astral/eslint-config-react-ts": "^1.5.0",
    "@astral/prettier-config": "^1.5.0",
    "@astral/stylelint-config-styled": "^1.5.0",
    "commitlint": "^17.1.2",
    "@astral/commitlint-config": "^1.5.0",
    "lint-staged": "^11.1.2",
    "yaspeller": "^8.0.1",
    "stylelint": "^14.11.0",
    "jest": "^28.1.3",
    "@types/jest": "29.0.2",
    "ts-jest": "^28.0.5",
    "husky": "^4.3.8"
  }
}
